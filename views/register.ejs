<%- include ('./partials/header') -%>
<%- include ('./partials/navbar') -%>
<!------ Include the above in your HEAD tag ---------->

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <h1 class="display -4">sign up</h1>
    </div><hr>

    <!-- register Form -->
    <form action="/register" method="POST">
      <input type="text"  class="fadeIn second" name="username" placeholder="Registration number">
      <input type="password"  class="fadeIn third" name="password" placeholder="password">
      <input type="text"  class="fadeIn third" name="confirm_password" placeholder="confirm password">
      <input type="email"  class="fadeIn third" name="email" placeholder="email">
      <input type="text"  class="fadeIn third" name="idnumber" placeholder="Id Number">
      <input type="text"  class="fadeIn third" name="securityquestion" placeholder="Security Question">

      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="/">login</a>
    </div>

  </div>
</div>
<%- include ('./partials/footer') -%>

